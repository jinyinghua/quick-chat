{
  "name": "Quick Chat",
  "short_name": "Quick Chat",
  "description": "支持OpenAI和Gemini的AI聊天应用，支持离线使用",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#10a37f",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "zh-CN",
  "categories": ["productivity", "social", "utilities"],
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "新对话",
      "short_name": "新对话",
      "description": "开始新的AI对话",
      "url": "/?action=new_chat"
    },
    {
      "name": "设置",
      "short_name": "设置",
      "description": "打开应用设置",
      "url": "/?action=settings"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+ai",
      "url": "/?handler=%s"
    }
  ],
  "prefer_related_applications": false
}
